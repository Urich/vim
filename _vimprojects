
server=~/develop/project/usc/server flags=r {
	CMakeLists.txt
	sources=./src filter="*.cpp" {
		main.cpp
		plugin.cpp
		config.cpp
		server.cpp
		protocols.cpp
	}
	config=. {
		config.cfg
	}
	include=./include filter="*.h" {
		plugin.h
		commandline.h
		config.h
		server.h
		protocols.h
	}
	unittest=./test {
		main.cpp
	}
}

