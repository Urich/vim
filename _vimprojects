
server=~/develop/project/usc/server flags=r {
	makefile
	sources=./src filter="*.cpp" {
		main.cpp
		plugin.cpp
		config.cpp
	}
	config=.
	{
		config.cfg
	}
	include=./include filter="*.h" {
		plugin.h
		commandline.h
		config.h
		server.h
	}
}

